{
    "manifest_version": 3,
    "name": "HH3D Auto Tool",
    "version": "1.1.0",
    "description": "Tự động hóa các tác vụ trên hoathinh3d (auto-detect domain)",
    "permissions": [
        "storage",
        "tabs",
        "alarms",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "answers.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}